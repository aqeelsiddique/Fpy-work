							<td>
								<span class="custom-checkbox">
									<input type="checkbox" id="checkbox1" name="options[]" value="1">
									<label for="checkbox1"></label>
								</span>
							</td>
							<td> {{this._id}}</td>
							<td></td>
							<td></td>
							<td></td>
							<td></td>
							<td></td>
							<td>{{this.ques}}</td>
							<td class="liststyle">

								<form method="POST" action="/update_Question/{{_id}}">
									<button class="btn"
										onclick="return confirm('Are you sure to update this record ?');"><i
											class="fa fa-edit"></i></button>

								</form>
								<form method="POST" action="/delete_Question/{{_id}}">
									<button class="btn"
										onclick="return confirm('Are you sure to delete this record ?');"><i
											class="fa fa-trash"></i></button>

								</form>
