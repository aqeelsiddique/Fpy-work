<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MY APP</title>
</head>
<body>

  <h1>Enter a Question and options </h1>

  <form action="" method="POST">
   {{!-- updaete code --}}


  <div class="form-group">
    <label for="select_subject">Quiz : </label>
    <select class="form-control" id="select_subject" name="select_subject" placeholder="Select machine" required="true">
      {{#if question}}
        {{#each select_subject}}
          <option value={{this._id}} {{isSelected this._id ../question.machine._id}}>{{this.name}}</option>
        {{/each}}
      {{else}}
        {{#each select_subject}}
          <option value={{this._id}}>{{this.name}}</option>
        {{/each}}
      {{/if}}
    </select>
  </div>
        {{!-- ///////////////update end code/////// --}}
  <div class="form-group">

 <input type="text" class="form-control" name="ques" placeholder="Question" required>
  <input type="text" class="form-control" name="option1" placeholder="option1" required>
   <input type="text" class="form-control" name="option2" placeholder="option2" required>

 <input type="text" class="form-control" name="option3" placeholder="option3" required>

 <input type="text" class="form-control" name="option4" placeholder="option4" required>
  <input type="text" class="form-control" name="ans" placeholder="ans" required>



   {{!-- <input type="text" class="form-control" name="fullSubjectName" placeholder="Subject Name"> --}}
</div><br>
<div class="form-group">
    <button type="submit" class="btn btn-info">
        <i class="fa fa-database"></i>
        Submit
    </button>
    <a href="/showlist" class="btn btn-danger">
        <i class="fa fa-list-alt"></i>
        ViewAll
    </a>
</div>
  </form>


  {{#if errors}}
<label>Errors:</label>
  <ul>
    {{#each errors}}
    <li>{{this.msg}}</li>
    {{/each}}
  </ul>
{{/if}}
  
</body>
</html>