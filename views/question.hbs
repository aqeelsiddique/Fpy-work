<form action="" method="POST" class="table-wrapper">

  <h1>Add a Question</h1><br>
  <div class="form-group">
    <label for="machine">Quiz:y</label>
   
    <select class="form-control" id="machine" name="machine" placeholder="Select machine" required="true">
      {{#if process}}
      {{#each list_subject}}
      <option value={{this._id}}>{{this.name}}</option>
      {{/each}}
      {{else}}
      {{#each list_subject}}
      <option value={{this._id}}>{{this.name}}</option>
      {{/each}}
      {{/if}}
    </select>
  </div>
  {{!-- ///////////////update end code/////// --}}
  <div class="form-group">
   <label for="question">Question : </label>
    <input class="form-control" id="question" placeholder='question' name='question' required="true"
      rows="5">{{process.question}}</input>
  </div>
  <div class="form-group">
    <label for="option1">Option 1 : </label>
    <input class="form-control" id="option1" placeholder='option1' name='option1' required="true"
      rows="5">{{process.option1}}</input>
  </div>
  <div class="form-group">
    <label for="option2">Option 2 : </label>
    <input class="form-control" id="option2" placeholder='option2' name='option2' required="true"
      rows="5">{{process.option2}}</input>
  </div>
    <div class="form-group">
    <label for="option2">Option 3 : </label>
    <input class="form-control" id="option3" placeholder='option3' name='option3' required="true"
      rows="5">{{process.option3}}</input>
  </div>
    <div class="form-group">
    <label for="option2">Option 4: </label>
    <input class="form-control" id="option4" placeholder='option4' name='option4' required="true"
      rows="5">{{process.option4}}</input>
  </div>
    <div class="form-group">
    <label for="option2">ans : </label>
    <input class="form-control" id="option2" placeholder='ans' name='ans' required="true"
      rows="5">{{process.ans}}</input>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-info" onclick="openpopup()">
      <i class="fa fa-database"></i>
      Submit
    </button>
    <a href="/showlist" class="btn btn-danger">
      <i class="fa fa-list-alt"></i>
      ViewAll
    </a>
  </div>
</form>
<div class="popup" id="popup">
  <img src="../images/404-tick.png" alt="">
  <h4>Sucessfully</4>
