<style>
  .form-control {
    margin: 15px;
    border-radius: 3px 3px 0 0;
  }

  .table-wrapper {
    margin-top: 100px;
    margin-left: 5%;
    margin-right: 5%;
    border-radius: 3px 3px 0 0;
  }

  h1 {
    background: #7522E6;
    color: #fff;
    padding: 16px 30px;
    min-width: 100%;
    margin: -20px -25px 10px;
    border-radius: 3px 3px 0 0;

  }
</style>
<form method="POST" action="" class="table-wrapper">
  {{!-- <div class="form-group">
    <label for="name">Name: </label>
    <input class="form-control" id="name" type="text" placeholder="Name of process" name="name" required="true"
      value="{{process.name}}">
  </div> --}}
  <div class="form-group">
    <h1>Add a Questions</h1>
    <label for="machine">Select Subject</label>
    <select class="form-control" id="machine" name="select_subject" placeholder="Select machine" required="true">
      {{#if pselect_subject}}
      {{#each }}
      <option value={{this._id}} {{isSelected this._id ../question.select_subject._id}}>{{this.name}}</option>
      {{/each}}
      {{else}}
      {{#each select_subject}}
      <option value={{this._id}}>{{this.name}}</option>
      {{/each}}
      {{/if}}
    </select>
  </div>
  <div class="form-group">
    <input class="form-control" id="question" placeholder='question' name='question' required="true"
      rows="5">{{process.question}}</input>
  </div>
  <div class="form-group">
    <input class="form-control" id="option1" placeholder='option1' name='option1' required="true"
      rows="5">{{process.option1}}</input>
  </div>
  <div class="form-group">
    <input class="form-control" id="option2" placeholder='option2' name='option2' required="true"
      rows="5">{{process.option2}}</input>
  </div>
  <div class="form-group">
    <input class="form-control" id="option3" placeholder='option3' name='option3' required="true"
      rows="5">{{process.option3}}</input>
  </div>
  <div class="form-group">
    <input class="form-control" id="option4" placeholder='option4' name='option4' required="true"
      rows="5">{{process.option4}}</input>
  </div>
  <div class="form-group">
    <input class="form-control" id="option2" placeholder='ans' name='ans' required="true"
      rows="5">{{process.ans}}</input>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>

{{#if errors}}
<label>Errors:</label>
<ul>
  {{#each errors}}
  <li>{{this.msg}}</li>
  {{/each}}
</ul>
{{/if}}